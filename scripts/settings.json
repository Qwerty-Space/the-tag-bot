{
  "settings": {
    "analysis": {
      "analyzer": {
        "ascii_fold": {
          "type": "custom",
          "tokenizer": "standard",
          "char_filter": [
            "split_filter"
          ],
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        },
        "edge_ngram_3_16": {
          "tokenizer": "standard",
          "char_filter": [
            "split_filter"
          ],
          "filter": [
            "lowercase",
            "asciifolding",
            "3_16_edgegrams"
          ]
        },
        "trigram": {
          "tokenizer": "trigram_tokenizer",
          "filter": [
            "lowercase",
            "asciifolding"
          ]
        }
      },
      "char_filter": {
        "split_filter": {
          "type": "mapping",
          "mappings": [
            "_ => -"
          ]
        }
      },
      "filter": {
        "3_16_edgegrams": {
          "type": "edge_ngram",
          "min_gram": 3,
          "max_gram": 16
        }
      },
      "tokenizer": {
        "trigram_tokenizer": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 3,
          "token_chars": [
            "letter",
            "digit",
            "punctuation",
            "symbol"
          ]
        }
      }
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "fuzzy_fields": {
          "match_pattern": "regex",
          "match": "^(title|filename|pack_name|tags)$",
          "mapping": {
            "type": "text",
            "analyzer": "ascii_fold",
            "fields": {
              "prefix_ngram": {
                "type": "text",
                "analyzer": "edge_ngram_3_16"
              },
              "trigram": {
                "type": "text",
                "analyzer": "trigram"
              }
            }
          }
        }
      }
    ],
    "dynamic": true,
    "properties": {
      "access_hash": {
        "type": "keyword",
        "index": false
      },
      "created": {
        "type": "long"
      },
      "emoji": {
        "type": "keyword",
        "ignore_above": 256
      },
      "ext": {
        "type": "text",
        "analyzer": "ascii_fold"
      },
      "id": {
        "type": "keyword",
        "ignore_above": 256
      },
      "is_animated": {
        "type": "boolean"
      },
      "last_used": {
        "type": "long"
      },
      "owner": {
        "type": "keyword",
        "ignore_above": 256
      },
      "pack_link": {
        "type": "keyword",
        "index": false
      },
      "type": {
        "type": "keyword",
        "ignore_above": 256
      }
    }
  }
}